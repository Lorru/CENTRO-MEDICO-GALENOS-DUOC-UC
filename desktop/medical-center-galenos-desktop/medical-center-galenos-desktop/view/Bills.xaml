<controls:MetroWindow x:Class="medical_center_galenos_desktop.view.Bills"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:medical_center_galenos_desktop.view"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="Facturas" Height="400" Width="700" Background="darkslategray" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseLight.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Label FontSize="25px" Content="Todas las facutas que estan deshabilitadas" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="672" Foreground="#FFFFFF"/>
        <DataGrid AutoGenerateColumns="False" ColumnWidth="*" x:Name="dataGridBill" HorizontalAlignment="Left" Height="170" Margin="10,138,0,0" VerticalAlignment="Top" Width="672">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding PATIENT.PATIENT_RUN}" Header="Rut del Paciente" />
                <DataGridTextColumn Binding="{Binding PATIENT.PATIENT_FULL_NAME}" Header="Nombre del Paciente" />
                <DataGridTextColumn Binding="{Binding SPECIALIST.BRANCH_OFFICE.BRANCH_OFFICE_NAME}" Header="Sucursal" />
                <DataGridTextColumn Binding="{Binding SPECIALIST.SPECIALTY.SPECIALTY_DESCRIPTION}" Header="Especialidad" />
                <DataGridTextColumn Binding="{Binding SPECIALIST.SPECIALIST_FULL_NAME}" Header="Especialista" />
                <DataGridTextColumn Binding="{Binding BILL_MEDICAL_TIME}" Header="Fecha Médica" />
                <DataGridTextColumn Binding="{Binding SCHEDULE.SCHEDULE_HOUR}" Header="Hora Médica" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Foreground="#FFFFFF" Background="#04c142" x:Name="btnReturn" Content="Volver" HorizontalAlignment="Left" Margin="10,339,0,0" VerticalAlignment="Top" Width="75" Click="btnReturn_Click"/>
        <Button Foreground="#FFFFFF" Background="#006cff" x:Name="btnUpdate" Content="Actualizar" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top" Width="75" Click="btnUpdate_Click"/>
    </Grid>
</controls:MetroWindow>
